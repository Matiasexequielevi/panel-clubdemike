<!-- views/pagos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pagos - Panel de Control</title>
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #000000, #1f1f1f);
      color: white;
    }
    .header {
      padding: 25px;
      background: #111;
      text-align: center;
      border-bottom: 2px solid #56c271;
    }
    .header img {
      height: 100px;
      filter: drop-shadow(0 0 12px #fcd000aa);
    }
    .header h1 {
      margin: 10px 0 0;
      font-size: 28px;
      color: #fcd000;
    }
    .contenido {
      padding: 40px 20px;
      max-width: 1000px;
      margin: auto;
    }
    .titulo-seccion {
      font-size: 22px;
      margin-bottom: 20px;
      color: #56c271;
      border-bottom: 1px solid #56c271;
      padding-bottom: 10px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #1a1a1a;
    }
    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #333;
    }
    th {
      background-color: #2a2a2a;
      color: #fcd000;
    }
    td {
      color: #eee;
    }
    .footer {
      text-align: center;
      padding: 20px;
      font-size: 13px;
      color: #ccc;
    }
    .footer a {
      color: #fcd000;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="header">
    <img src="/images/logo.png" alt="Logo">
    <h1>PANEL DE CONTROL</h1>
  </div>

  <div class="contenido">
    <div class="titulo-seccion">Historial de Pagos</div>
    <table>
      <thead>
        <tr>
          <th>Socio</th>
          <th>Monto</th>
          <th>Fecha</th>
          <th>MÃ©todo de Pago</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% pagos.forEach(pago => { %>
          <tr>
            <td><%= pago.nombreSocio %></td>
            <td>$<%= pago.monto %></td>
            <td><%= new Date(pago.fecha).toLocaleDateString() %></td>
            <td><%= pago.metodo %></td>
            <td>
              <a href="/admin/pagos/eliminar/<%= pago._id %>" style="color: red; text-decoration: underline;">Eliminar</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="footer">
    Todos los derechos reservados - <a href="https://www.instagram.com/levi_desarrollador" target="_blank">Levi Desarrollos Web</a>
  </div>
</body>
</html>
