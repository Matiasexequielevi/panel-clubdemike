<!-- views/productos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Productos | Panel de Control</title>
  <link rel="stylesheet" href="/css/estilos.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white">
  <div class="container py-5">
    <div class="text-center mb-4">
      <img src="/images/logo.png" alt="Logo" class="rounded-circle" width="120" />
      <h2 class="mt-3">Gestión de Productos</h2>
      <div class="border-bottom border-light mb-4" style="height: 2px;"></div>
      <a href="/panel" class="btn btn-outline-light mb-3">← Volver al Panel</a>
    </div>

    <div class="mb-4 text-end">
      <a href="/admin/productos/nuevo" class="btn btn-success">➕ Agregar Producto</a>
    </div>

    <div class="row">
      <% if (productos.length > 0) { %>
        <% productos.forEach(producto => { %>
          <div class="col-md-4 mb-4">
            <div class="card text-dark">
              <img src="<%= producto.imagenUrl %>" class="card-img-top" alt="Producto" />
              <div class="card-body">
                <h5 class="card-title"><%= producto.nombre %></h5>
                <p class="card-text"><%= producto.descripcion %></p>
                <p class="fw-bold">$<%= producto.precio %></p>
                <div class="d-flex justify-content-between">
                  <a href="/admin/productos/editar/<%= producto._id %>" class="btn btn-primary btn-sm">Editar</a>
                  <form action="/admin/productos/eliminar/<%= producto._id %>" method="POST">
                    <button class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este producto?')">Eliminar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-center">
          <p>No hay productos cargados aún.</p>
        </div>
      <% } %>
    </div>
  </div>

  <footer class="text-center text-white mt-5 mb-3">
    <small>Todos los derechos reservados - Levi Prog.</small>
  </footer>

</body>
</html>
